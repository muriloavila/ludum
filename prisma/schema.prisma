generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./ludum.db"
}

model Platform {
  id        Int       @id @default(autoincrement())
  uuid      String    @unique
  name      String
  cover     String
  icon      String
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("platforms")
}
